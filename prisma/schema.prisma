generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(uuid())
  name String
  username String @unique
  email String
  groups    UserGroups[]
  tasks Task[]
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  @@map("users")
}

model Group {
  id String @id @default(uuid())
  name String
  createdBy String
users     UserGroups[]
  tasks     Task[]
    createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  @@map("group")
}

model UserGroups {
  userId  String
  groupId String

  user    User  @relation(fields: [userId], references: [id])
  group   Group @relation(fields: [groupId], references: [id])

  @@id([userId, groupId])
}

model Task {
  id String @id @default(uuid())
  heading String

 userId    String
 groupId String
  user      User     @relation(fields: [userId], references: [id])
 group     Group    @relation(fields: [groupId], references: [id])
  description String 
  completed Boolean
  createdAt DateTime @default(now())
  @@map("task")
}


